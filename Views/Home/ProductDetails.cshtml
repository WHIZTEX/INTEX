@{
    ViewData["Title"] = "Product Details";
}

@model ProductRecommendation

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -15px;
    }

    .col-md-6 {
        width: 50%;
        padding: 15px;
    }

    .text-center {
        text-align: center;
    }

    .product-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-details {
        background: linear-gradient(to right, #f4f4f4, #e0e0e0);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
    }

    .description {
        font-size: 16px;
        color: #333;
    }

    .similar-products {
        padding: 20px 0;
        border-top: 1px solid #ccc;
        margin-top: 20px;
    }

    .similar-product {
        display: inline-block;
        width: 19%; /* Adjust based on how many items per row you want */
        padding: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 10px;
        background-color: white;
        text-align: center;
        vertical-align: top;
        border-radius: 10px;
    }

        .similar-product img {
            width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .similar-product h3 {
            font-size: 18px;
            color: #333;
        }

        .similar-product p {
            font-size: 16px;
            color: #666;
        }
</style>


<div class="container">
    <div class="row">
        <!-- First Column -->
        <div class="col-md-6 text-center" style="padding-top: 8%;">
            <!-- Content for the first column goes here -->
            @if (Model.ProductRec != null)
            {
                <img width="80%" src="@Model.ProductRec.ImgLink" />
            }
            else
            {
                <p>No product image available</p>
            }
        </div>

        <!-- Second Column -->
        <div class="col-md-6" style="padding-top: 8%;">
            <!-- Content for the second column goes here -->
            @if (Model.ProductRec != null)
            {
                <h2>@Model.ProductRec.Name</h2>
                <p>Star rating should go here</p>
                <br />
                <button>Add to Cart</button>
                <h3>@Model.ProductRec.Price</h3>
                <br />
                <hr />
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <p>FREE SHIPPING</p>
                    </div>
                    <div class="col-md-6">
                        <p>FREE RETURNS</p>
                    </div>
                </div>
                <br />
                <h3>DESCRIPTION</h3>
                <p>@Model.ProductRec.Description</p>
            }
            else
            {
                <p>No product details available</p>
            }
        </div>
    </div>
</div>

@if (Model.Product1 != null || Model.Product2 != null || Model.Product3 != null || Model.Product4 != null || Model.Product5 != null)
{
    <div>
        <h2>Similar Products</h2>
        <div class="row">
            @if (Model.Product1 != null)
            {
                <div class="col-md-4">
                    <h3>@Model.Product1.Name</h3>
                    <p>@Model.Product1.Category</p>
                    <img src="@Model.Product1.ImgLink" alt="@Model.Product1.Name" class="img-fluid">
                </div>
            }

            @if (Model.Product2 != null)
            {
                <div class="col-md-4">
                    <h3>@Model.Product2.Name</h3>
                    <p>@Model.Product2.Category</p>
                    <img src="@Model.Product2.ImgLink" alt="@Model.Product2.Name" class="img-fluid">
                </div>
            }

            @if (Model.Product3 != null)
            {
                <div class="col-md-4">
                    <h3>@Model.Product3.Name</h3>
                    <p>@Model.Product3.Category</p>
                    <img src="@Model.Product3.ImgLink" alt="@Model.Product3.Name" class="img-fluid">
                </div>
            }

            @if (Model.Product4 != null)
            {
                <div class="col-md-4">
                    <h3>@Model.Product4.Name</h3>
                    <p>@Model.Product4.Category</p>
                    <img src="@Model.Product4.ImgLink" alt="@Model.Product4.Name" class="img-fluid">
                </div>
            }

            @if (Model.Product5 != null)
            {
                <div class="col-md-4">
                    <h3>@Model.Product5.Name</h3>
                    <p>@Model.Product5.Category</p>
                    <img src="@Model.Product5.ImgLink" alt="@Model.Product5.Name" class="img-fluid">
                </div>
            }
        </div>

    </div>
}