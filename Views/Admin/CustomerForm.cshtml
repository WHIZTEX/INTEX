@model Customer

@{
    string action = "";
    if (Model == null)
    {
        action = "Create";
    }
    else
    {
        action = "Update";
    }
}

<h2>@action Customer</h2>

<form asp-action="CustomerForm" method="post">
    <!-- Hidden fields that will not be edited -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserName" />
    <input type="hidden" asp-for="NormalizedUserName" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="NormalizedEmail" />
    <input type="hidden" asp-for="EmailConfirmed" />
    <input type="hidden" asp-for="PasswordHash" />
    <input type="hidden" asp-for="SecurityStamp" />
    <input type="hidden" asp-for="ConcurrencyStamp" />
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="PhoneNumberConfirmed" />
    <input type="hidden" asp-for="TwoFactorEnabled" />
    <input type="hidden" asp-for="LockoutEnd" />
    <input type="hidden" asp-for="LockoutEnabled" />
    <input type="hidden" asp-for="AccessFailedCount" />
    <input type="hidden" asp-for="AddressId" />

    <!-- Editable fields -->
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="BirthDate">Birth Date:</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Gender">Gender:</label>
        <select asp-for="Gender" class="form-control">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.AddressLine1">Address Line 1:</label>
        <input asp-for="HomeAddress.AddressLine1" class="form-control" />
        <span asp-validation-for="HomeAddress.AddressLine1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.AddressLine2">Address Line 2:</label>
        <input asp-for="HomeAddress.AddressLine2" class="form-control" />
        <span asp-validation-for="HomeAddress.AddressLine2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.City">City:</label>
        <input asp-for="HomeAddress.City" class="form-control" />
        <span asp-validation-for="HomeAddress.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.State">State:</label>
        <input asp-for="HomeAddress.State" class="form-control" />
        <span asp-validation-for="HomeAddress.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.Code">Code:</label>
        <input asp-for="HomeAddress.Code" class="form-control" />
        <span asp-validation-for="HomeAddress.Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="HomeAddress.Country">Country:</label>
        <input asp-for="HomeAddress.Country" class="form-control" />
        <span asp-validation-for="HomeAddress.Country" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@action Customer</button>
    <button onclick="goBack()" class="btn btn-secondary">Cancel</button>
</form>

<script>
    function goBack() {
        window.history.back();
    }
</script>