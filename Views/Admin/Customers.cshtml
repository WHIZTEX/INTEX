@using INTEX.Models
@using INTEX.Models.DatabaseModels
@using INTEX.Models.Infrastructure
@using INTEX.Models.ViewModels
@using Microsoft.AspNetCore.Identity
@inject UserManager<Customer> UserManager
@inject RoleManager<IdentityRole> RoleManager

@{
    ViewData["Title"] = "Privacy Policy";
}

@model CustomersListViewModel

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Country of Residence</th>
            <th>Gender</th>
            <th>Role</th>
            <th>Edit</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Customers)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.FirstName</td>
                <td>@c.LastName</td>
                <td>@c.BirthDate</td>
                <td>@c.HomeAddress.Country</td>
                <td>@c.Gender</td>
                <td>
                    @foreach (var role in await UserManager.GetRolesAsync(c))
                    {
                        <span>@role</span>
                    }
                </td>
                <td><a asp-controller="Admin" asp-action="CustomerForm" asp-route-customerId="@c.Id" formmethod="get">Edit</a></td>
                <td><a asp-controller="Admin" asp-action="DeleteConfirmation" formmethod="get">Remove</a></td>
            </tr>
        }
    </tbody>
</table>