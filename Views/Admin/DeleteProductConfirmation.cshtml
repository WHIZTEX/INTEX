@model Product

<h1>Are you sure you want to delete this Product?</h1>

<form asp-action="DeleteProduct" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="ReleaseYear" />
    <input type="hidden" asp-for="Pieces" />
    <input type="hidden" asp-for="Price" />
    <input type="hidden" asp-for="ImgLink" />
    <input type="hidden" asp-for="PrimaryColor" />
    <input type="hidden" asp-for="SecondaryColor" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="Category" />
    <input type="hidden" asp-for="IsDeleted" />

    <button type="submit">Delete</button>
    <a class="btn btn-info" asp-controller="Admin" asp-action="Products">Cancel</a>
</form>

