@{
    Layout = "_YourLayoutPage"; // Specify your shared layout page
}

<div class="container rounded p-5 bg-light text-dark">
    <div class="text-center">
        <h1 class="display-4" style="font-weight:900; color:#EDD146; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);">Admin Home</h1><br /><br />
    </div>

    <div class="admin-home-container">
        <div class="text-center">
            <div class="admin-home-actions">
                <!-- Action buttons or links -->
                <button asp-controller="Admin" asp-action="Products" class="admin-button">Products</button>
                <br /><br />
                <button asp-controller="Admin" asp-action="Customers"class="admin-button">Users</button>
                <br /><br />
                <button asp-controller="Admin" asp-action="Orders" class="admin-button">Orders</button>
                <br /><br />
                <button asp-controller="Customer" asp-action="CustomerInfo" class="admin-button">Manage my Account</button>
                <br /><br />
            </div>
        </div>

        <br /><br />
        <img style="height: 400px; border-radius: 20px;" src="/img/Logo.png" class="mx-auto d-block mb-4" />
    </div>
</div>